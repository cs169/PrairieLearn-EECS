<!DOCTYPE html>
<html>
  <head>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.0.js"></script>
  </head>
  <body>
    <nav>
      <div class="nav-wrapper">
        <div id="name" style="font-size:23px">Create New Assessment</div>
      </div>
    </nav>

    <div class="col rightcol">
      <p>Configurations</p>
      <form >
      	<div class='configs' style="overflow:scroll; height:600px;">
          <label class='question_title'>Assessment name:</label><br>
          <input type="text" name=assessment_name size=36><br><br>

          <label class='question_title'>Type:</label>
          <select>
            <option>Exam</option>
            <option>Homework</option>
          </select>
          <label class='question_title'>Credit:</label>
          <input type="text" value="100" name="assessment_credit" size=4><br><br>

          <div class="access_forms">
            <label class='question_title'>Allow access to:</label><br>
            <select>
              <option>Student</option>
              <option>TA</option>
              <option>Instructor</option>
            </select><br>
            <label class='question_title'>Start date:</label><br>
            <input type="date" value="2021-03-02" min="2021-03-02" max="2021-12-31">
            <input type="time" min="00:00" max="23:59"><br>

            <label class='question_title'>End date:</label><br>
            <input type="date" value="2021-03-02" min="2021-03-02" max="2021-12-31">
            <input type="time" min="00:00" max="23:59"><br><br>
          </div>
          <input type="button" id="add_access" value="+">
          <input type="button" id="delete_access" value="-"><br><br>
          <script>
          $(document).ready(function(){
          	// Spawns new access forms
            $('#add_access').click(function(){

              // Create clone of <div class='input-form'>
              var newel = $('.access_forms:last').clone(true);

              // Add after last <div class='input-form'>
              $(newel).insertAfter(".access_forms:last");
            });

            // Deletes previously spawned access forms
            $('#delete_access').click(function() {
            	var count = $('.access_forms').length;
              if (count > 1)
              	$( ".access_forms:last" ).remove();
            });
          });
          </script>

        </div><br>

        <input class='question_title' type="button" value="Save"<br>
        <input class='question_title' type="button" value="Export"<br><br>
      </form>
    </div>

    <div class="col middlecol">
      <p>Selected Questions</p>
    </div>

    <div class="col leftcol">
      <p>Questions</p>
      <div class='leftcoltxt question_title'><% @questions.each do |question| %>
        <tr>
          <td><%= question.title %></td>
        </tr>
      <% end %></div>
    </div>

  </body>
</html>
