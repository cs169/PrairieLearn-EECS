  <body>
    <div>
      <p> Choose a repository to synchronize: </p>
      <%= select_tag 'repo_id', options_for_select(@repos.map {|repo|
        [repo.full_name, repo.full_name]}), class: 'form-control', id: 'repo' %>
      <br>
      <%= button_to 'Synchronize', sync_path, method: :get %>

    </div>
  </body>
</html>
